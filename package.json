{
  "name": "ia-quoi-platform",
  "version": "1.0.0",
  "description": "IA QUOI - Plateforme d'outils interactifs avec PIXEL-IA",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"cd backend && python server.py\" \"cd frontend && yarn start\"",
    "build": "cd frontend && yarn build",
    "install": "cd frontend && yarn install && cd ../backend && pip install -r requirements.txt"
  },
  "emergent": {
    "services": {
      "backend": {
        "port": 8001,
        "directory": "./backend",
        "command": "python server.py"
      },
      "frontend": {
        "port": 3000,
        "directory": "./frontend",
        "command": "yarn start"
      }
    },
    "routes": [
      {
        "path": "/api/*",
        "service": "backend"
      },
      {
        "path": "/*",
        "service": "frontend"
      }
    ]
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  }
}